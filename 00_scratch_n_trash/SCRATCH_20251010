M = 40
random_indices = np.random.choice(normal_lines_n, M, replace=False)
random_normals = normal_endpoints[: , : , random_indices]
rand_x = random_normals[:, 1, :]
rand_y = random_normals[:, 0, :]
fig, ax = plt.subplots()
ax.imshow(mean_ne_img, cmap='viridis', origin='upper')
ax.plot(rand_y, rand_x, color='red', linewidth=0.5)
ax.set_title("Sampled Normal Lines on Cropped Image")
ax.set_aspect('equal')
plt.show()